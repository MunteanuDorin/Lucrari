package com.company;

public class CartePsihologie extends Carte {
    public String descrierea;
    public boolean copertaDeCarton;
    public String biografiaAutorului;
    
    CartePsihologie(String denumirea, String autorul, double pagini, String editura, float pretul, String descrierea, boolean copertaDeCarton, String biografiaAutorului{
        super(denumirea, autorul, pagini, editura, pretul);
        this.descrierea = descrierea;
        this.copertaDeCarton = copertaDeCarton;
        this.rezumatul = rezumatul;
    }
    
    //get
    public int getDescrierea(){
        return this.descrierea;
    }
    
    public boolean getCopertaDeCarton(){
        return this.copertaDeCarton;
    }
    
    public String getBiografiaAutorului(){
        return this.biografiaAutorului;
    }
    
    //set
    public void setDescrierea(String descrierea){
        this.descrierea = descrierea;
    }
    
    public void setCopertaDeCarton(boolean copertaDeCarton){
        this.copertaDeCarton = copertaDeCarton;
    }
    
    public void setBiografiaAutorului(String biografiaAutorului){
        this.biografiaAutorului = biografiaAutorului;
    }
    
    @Override
    public String toString() {
        return  "Cartea se numeste" + denumirea +
                ", este scrisa de = " + autorul +
                ", are " + pagini +
                ", este editata de" + editura +
                ", costa " + pretul + 
                ", are coperta de carton " + copertaDeCarton +
                ". Despre carte: " + descrierea +
                ". Despre autor: " + biografiaAutorului + " . ";
                
    }  
}
